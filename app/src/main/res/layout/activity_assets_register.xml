<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:line="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <include layout="@layout/include_navi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_register_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="@dimen/margin_5"
                android:padding="8dp"
                fancy:fb_borderColor="#7ed862"
                fancy:fb_borderWidth="2dp"
                fancy:fb_focusColor="#ffa8f192"
                fancy:fb_ghost="true"
                fancy:fb_iconResource="@drawable/ic_assets_category"
                fancy:fb_radiusBottomRight="10dp"
                fancy:fb_radiusTopLeft="10dp"
                fancy:fb_text="@string/btn_category_text"
                fancy:fb_textColor="#000000"
                fancy:fb_textFont="隶书.ttf"
                fancy:fb_textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_register_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="必选"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
        </LinearLayout>


    </LinearLayout>
    <!--<include layout="@layout/view_line_between"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/tv_assets_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="资产名称："
                android:textSize="16sp"
                android:textColor="#000000"/>
            <com.example.administrator.assetsmanagement.utils.LineEditText
                android:id="@+id/et_register_assets_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入资产名称"
                line:lineColorEt="#1d26de"
                android:background="@color/transparent"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>
    <!--<include layout="@layout/view_line_between"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_register_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/pictures_no"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_assets_item_picture_lib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图库"
                android:drawableTop="@drawable/ic_picture_library"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_assets_item_camera"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_camera"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>
    <!--<include layout="@layout/view_line_between"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_assets_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="数量："
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.example.administrator.assetsmanagement.utils.LineEditText
                android:id="@+id/et_register_assets_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:hint="输入数量"
                android:inputType="number"
                line:lineColorEt="#1d26de" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tv_assets_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="单价："
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.example.administrator.assetsmanagement.utils.LineEditText
                android:id="@+id/et_register_asset_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:inputType="numberDecimal"
                android:hint="0.0"
                line:lineColorEt="#1d26de" />
        </LinearLayout>

    </LinearLayout>
    <!--<include layout="@layout/view_line_between"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_assets_register_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="登记日期："
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.example.administrator.assetsmanagement.utils.LineEditText
            android:id="@+id/et_register_assets_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:inputType="date"
            android:hint="购买或登记日期"
            line:lineColorEt="#1d26de" />
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/margin_10">
       <TextView
           android:id="@+id/tv_assets_register_comment"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:text="备注："
           android:textColor="#000000"
           android:textSize="16sp" />

       <com.example.administrator.assetsmanagement.utils.LineEditText
           android:id="@+id/et_register_assets_comment"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/transparent"
           android:textSize="16sp"
           line:lineColorEt="#1d26de" />
   </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/btn_register_add_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:text="@string/btn_confirm"
                android:background="@drawable/btn_login_selector"
                android:textColor="@color/base_color_text_white"
                android:textSize="16sp"
                android:padding="10dp"/>
            <Button
                android:id="@+id/btn_register_add_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:text="@string/btn_next_text"
                android:background="@drawable/btn_login_selector"
                android:textColor="@color/base_color_text_white"
                android:textSize="16sp"
                android:padding="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>