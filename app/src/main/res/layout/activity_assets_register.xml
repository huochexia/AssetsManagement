<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fancy="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/background">
    <include layout="@layout/include_navi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_register_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="@dimen/margin_5"
            android:padding="8dp"
            fancy:fb_borderColor="#7ed862"
            fancy:fb_borderWidth="2dp"
            fancy:fb_focusColor="#ffa8f192"
            fancy:fb_iconResource="@drawable/ic_room_black_24dp"
            fancy:fb_radiusBottomRight="10dp"
            fancy:fb_radiusTopLeft="10dp"
            fancy:fb_text="位置"
            fancy:fb_ghost="true"
            fancy:fb_textColor="#000000"
            fancy:fb_textFont="隶书.ttf"
            fancy:fb_textSize="18sp"
            />


        <TextView
            android:id="@+id/tv_register_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            tools:text="A"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <include layout="@layout/view_line_between"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_register_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="@dimen/margin_5"
                android:padding="8dp"
                fancy:fb_borderColor="#7ed862"
                fancy:fb_borderWidth="2dp"
                fancy:fb_focusColor="#ffa8f192"
                fancy:fb_ghost="true"
                fancy:fb_iconResource="@drawable/ic_assets_category"
                fancy:fb_radiusBottomRight="10dp"
                fancy:fb_radiusTopLeft="10dp"
                fancy:fb_text="类别"
                fancy:fb_textColor="#000000"
                fancy:fb_textFont="隶书.ttf"
                fancy:fb_textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_register_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="办公家具"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_assets_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="资产名称："
                android:textSize="18sp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_register_assets_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_line_between"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_register_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/assets_image_default"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_assets_item_picture_lib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图库"
                android:drawableTop="@drawable/ic_picture_library"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_assets_item_camera"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_camera"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_line_between"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_assets_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数   量："
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="20dp"/>
        <EditText
            android:id="@+id/et_register_assets_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <include layout="@layout/view_line_between"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_assets_register_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_register_add_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="#3f51b4"
                fancy:fb_focusColor="#7182e2"
                fancy:fb_radius="15dp"
                fancy:fb_text="确    定"
                fancy:fb_textFont="隶书.ttf"
                fancy:fb_textSize="20sp"
                fancy:fb_textColor="#FFFFFF">
            </mehdi.sakout.fancybuttons.FancyButton>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_register_add_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="#3f51b4"
                fancy:fb_focusColor="#7182e2"
                fancy:fb_radius="15dp"
                fancy:fb_text="下 一 个"
                fancy:fb_textFont="隶书.ttf"
                fancy:fb_textSize="20sp"
                fancy:fb_textColor="#FFFFFF">
            </mehdi.sakout.fancybuttons.FancyButton>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>