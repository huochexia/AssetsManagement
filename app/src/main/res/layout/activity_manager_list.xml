<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fancy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/include_navi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_manager_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_manager_select_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="@dimen/margin_10"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="0dp"
            fancy:fb_defaultColor="#3f51b4"
            fancy:fb_focusColor="#7182e2"
            fancy:fb_radius="30dp"
            fancy:fb_text="确  定"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textFont="隶书.ttf"
            fancy:fb_textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>