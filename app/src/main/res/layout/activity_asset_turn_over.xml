<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fancy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/include_navi"/>

    <LinearLayout
        android:id="@+id/ll_assets_turn_over_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/turn_over_content"
                android:textSize="18sp"/>

            <RadioGroup
                android:id="@+id/rg_assets_turn_over"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_single_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_single_text"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/rb_overall_assets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_overall_text"
                    android:textSize="16sp"/>
            </RadioGroup>
        </LinearLayout>

        <include layout="@layout/view_line_between"/>

        <include layout="@layout/single_asset_search"/>

        <LinearLayout
            android:id="@+id/ll_overall_asset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/turn_over_scope"
                    android:textSize="18sp"/>

                <RadioGroup
                    android:id="@+id/rg_assets_turn_over_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_turn_over_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/location"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/rb_turn_over_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manager"
                        android:textSize="16sp"/>
                </RadioGroup>

            </LinearLayout>

            <include layout="@layout/view_line_between"/>

            <include layout="@layout/assets_search_middle"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view_line_between"/>

    <include layout="@layout/item_asset_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_turn_over_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <include layout="@layout/view_line_between"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_weight="1">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_receive_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="0dp"
                    fancy:fb_defaultColor="#3fb2b4"
                    fancy:fb_focusColor="#3f51b4"
                    fancy:fb_radius="15dp"
                    fancy:fb_text="@string/btn_new_location_text"
                    fancy:fb_textColor="#FFFFFF"
                    fancy:fb_textFont="隶书.ttf"
                    fancy:fb_textSize="16sp">
                </mehdi.sakout.fancybuttons.FancyButton>

                <TextView
                    android:id="@+id/tv_receive_new_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_weight="1">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_receive_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="0dp"
                    fancy:fb_defaultColor="#3fb2b4"
                    fancy:fb_focusColor="#3f51b4"
                    fancy:fb_radius="15dp"
                    fancy:fb_text="@string/btn_new_department_text"
                    fancy:fb_textColor="#FFFFFF"
                    fancy:fb_textFont="隶书.ttf"
                    fancy:fb_textSize="16sp">
                </mehdi.sakout.fancybuttons.FancyButton>

                <TextView
                    android:id="@+id/tv_receive_new_dept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textSize="15sp"/>
            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/view_line_between"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            >

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_receive_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="#3fb2b4"
                fancy:fb_focusColor="#3f51b4"
                fancy:fb_radius="15dp"
                fancy:fb_text="@string/btn_new_receiver_text"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textFont="隶书.ttf"
                fancy:fb_textSize="16sp">
            </mehdi.sakout.fancybuttons.FancyButton>

            <TextView
                android:id="@+id/tv_receive_new_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_turn_over_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="0dp"
                    fancy:fb_defaultColor="#3f51b4"
                    fancy:fb_disabledColor="#aeaaaa"
                    fancy:fb_focusColor="#7182e2"
                    fancy:fb_radius="15dp"
                    fancy:fb_text="@string/btn_confirm"
                    fancy:fb_textColor="#FFFFFF"
                    fancy:fb_textFont="隶书.ttf"
                    fancy:fb_textSize="16sp">
                </mehdi.sakout.fancybuttons.FancyButton>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>