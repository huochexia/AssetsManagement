<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_tree_structure"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>

    <include layout="@layout/view_line_between" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tree_structure_current_node_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="当前节点"
                android:textSize="22sp" />

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/height_2"
               android:background="@color/base_color_text_white"/>

            <TextView
                android:id="@+id/tv_tree_structure_current_node"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                tools:text="学校" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_tree_add_node"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/height_2"
                android:padding="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="#3f51b4"
                fancy:fb_focusColor="#7182e2"
                fancy:fb_text="增加"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textFont="隶书.ttf"
                fancy:fb_textSize="16sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_tree_replace_node"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/height_2"
                android:padding="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="#3f51b4"
                fancy:fb_focusColor="#7182e2"
                fancy:fb_text="修改为"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textFont="隶书.ttf"
                fancy:fb_textSize="16sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_tree_delete_node"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="#3f51b4"
                fancy:fb_focusColor="#7182e2"
                fancy:fb_text="删除"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textFont="隶书.ttf"
                fancy:fb_textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <EditText
                android:id="@+id/ed_tree_structure_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:hint="新增改节点名称" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>