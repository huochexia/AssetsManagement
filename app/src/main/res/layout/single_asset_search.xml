<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:line="http://schemas.android.com/tools"
    android:id="@+id/rl_single_asset"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_barcode_2d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/barcode_2d" />

            <com.example.administrator.assetsmanagement.utils.LineEditText
                android:id="@+id/et_search_asset_num"
                line:lineColorEt="#1d26de"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/transparent"
                android:hint="@string/editview_hint_text"

                android:textSize="16sp" />
        </LinearLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_single_asset_search"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="0dp"
            fancy:fb_defaultColor="#3f51b4"
            fancy:fb_focusColor="#7182e2"
            fancy:fb_radius="15dp"
            fancy:fb_text="@string/btn_search_text"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textFont="隶书.ttf"
            fancy:fb_textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:padding="10dp"/>

</RelativeLayout>